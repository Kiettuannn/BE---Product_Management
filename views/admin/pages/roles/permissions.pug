          td(colspan=roles.length+1 style="font-weight: bold; ") Phân quyền
        tr(data-name="permissions_view")
          td Xem 
          each item in roles 
            td(class="text-center")
              input(type="checkbox")

        tr(data-name="permissions_edit")
          td Chỉnh sửa
          each item in roles 
            td(class="text-center")
              input(type="checkbox")
        tr
          td(colspan=roles.length+1 style="font-weight: bold; ") Tài khoản
        tr(data-name="accounts_view")
          td Xem 
          each item in roles 
            td(class="text-center")
              input(type="checkbox")

        tr(data-name="accounts_edit")
          td Chỉnh sửa
          each item in roles 
