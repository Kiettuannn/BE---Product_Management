extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(5000)
  h1(class="mb-4") Thêm mới tài khoản

  form(
  action=`${prefixAdmin}/accounts/create`
  id="form-create-role"
  method="POST"
  enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Tên tài khoản
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
      )
    
    div(class="form-group")
      label(for="email") Email
      input(
        type="text"
        class="form-control"
        id="email"
        name="email"
        required
      )
    
    div(class="form-group")
      label(for="password") Mật khẩu
      input(
        type="text"
        class="form-control"
        id="password"
        name="password"
        required
      )
    
    div(class="form-group")
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        required
      )
    
    div(class="form-group")
      label(for="role_id") Chức vụ
      select(
        class="form-control"
        id="role_id"
        name="role_id"
      )
        option(value="") --- Chọn chức vụ ---
          each item in roles 
            option(
              value= item._id
            ) #{item.title}
        
    div(class="form-group"
    upload-image
    )
      label(for="avatar") Ảnh đại diện
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class="image-preview"
      )
    
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(class="form-check-label" for="statusActive") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
      )
      label(class="form-check-label" for="statusInactive") Dừng hoạt động
    
    
    div(class="form-group")
      button(type="submit" class="btn btn-primary") Thêm mới

  script(src="/admin/js/role.js")