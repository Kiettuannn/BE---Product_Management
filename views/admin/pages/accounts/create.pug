extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  h1(class="mb-4") Thêm mới tài khoản

  form(
  action=`${prefixAdmin}/accounts/create`
  id="form-create-role"
  method="POST"
  )
    div(class="form-group")
      label(for="title") Tên tài khoản
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    
    div(class="form-group")
      label(for="title") Email
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    
    div(class="form-group")
      label(for="title") Mật khẩu
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    
    div(class="form-group")
      label(for="title") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    
    div(class="form-group")
      label(for="role_id") Chức vụ
      select(

      )
        option(value="1")
    div(class="form-group"
    upload-image
    )
      label(for="thumbnail") Ảnh đại diện
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class="image-preview"
      )
    
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(class="form-check-label" for="statusActive") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
      )
      label(class="form-check-label" for="statusInactive") Dừng hoạt động
    
    
    div(class="form-group")
      button(type="submit" class="btn btn-primary") Thêm mới

  script(src="/admin/js/role.js")